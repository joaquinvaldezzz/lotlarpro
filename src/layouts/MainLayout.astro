---
import '~/styles/main.css'

interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="" />
  </head>

  <body class="min-w-80 antialiased">
    <slot />
  </body>
</html>
